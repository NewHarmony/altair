{
    "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
    "data": {
        "url": "https://vega.github.io/vega-lite/data/cars.json"
    },
    "encoding": {
        "x": {
            "aggregate": "mean",
            "field": "Horsepower",
            "type": "quantitative"
        },
        "y": {
            "field": "Origin",
            "sort": {
                "field": "Horsepower",
                "op": "mean"
            },
            "type": "ordinal"
        }
    },
    "mark": "bar"
}